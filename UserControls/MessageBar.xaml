<UserControl x:Class="HtmlTestValidator.UserControls.MessageBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HtmlTestValidator.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="24"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblMessage" Content="" Foreground="White" Background="Blue" MouseDoubleClick="lblMessage_MouseDoubleClick"/>
        <Label x:Name="lblClose" Content="x" Grid.Column="1" Foreground="White" Background="Blue" 
               VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="0 -8 0 0"
               Cursor="Hand" MouseDown="lblClose_MouseDown"/>
    </Grid>
</UserControl>
